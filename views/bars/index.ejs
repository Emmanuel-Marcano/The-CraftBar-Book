
    <% layout('layouts/boilerplate') %> 
    <div id="map" style="width: 100%; height: 500px;"></div>
   
        <% for(let bar of bars) { %> 
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(bar.images.length) { %> 
                        <img class="img-fluid" src="<%= bar.images[0].url %>" alt="">
                        <% } else { %> 
                            <img class="img-fluid" src="https://res.cloudinary.com/dzbovxcji/image/upload/v1671476348/craftBarBook/ojxvbbhbusrfohs6slmr.jpg" alt="">
                        <% } %> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= bar.title %></h5>
                            <p class="card-text"><%= bar.description %></p>
                            <p class="card-text">
                                <small class="text-muted" ><%= bar.location %> </small>
                            </p>
                            <a class="btn btn-primary" href="/bars/<%= bar._id %>">View <%= bar.title %> </a>
                        </div>

                    </div>
                </div>
            </div>
        <% } %> 
    
        <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
            const bars = {features: <%- JSON.stringify(bars) %>}
        </script>

        <script src="/javascripts/clusterMap.js"></script>
    
